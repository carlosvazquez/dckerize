data:
  image: <%= @db %>
  name: <%= @name %>-data
  environment:
    - <%= @db_password %>=secretpassword
  volumes:
    - /var/lib/<%= @db_name_for_data_volume %>
  command: true
<%= @db_service_name %>:
  image: <%= @db %>
  name: <%= @name %>-db
  environment:
    - <%= @db_password %>=secretpassword
  volumes_from:
    - data
webapp:
  build: .
  name: <%= @name %>
  ports:
    - "80:80"
  environment:
    - PASSENGER_APP_ENV=development
  links:
    - <%= @db_service_name %>:<%= @db_service_name %>
  volumes:
    - /<%= @name %>:/home/app/<%= @name %>
